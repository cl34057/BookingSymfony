{% extends 'base.html.twig' %}

{% block title %}Les annonces{% endblock %}

{% block body %}
<main class="container">
     <h1 class="mt-5 mb-3">{{ controller_name }}</h1>
    <div class="row">
    {% for ad in ads %}

        {% include 'ad/_ad.html.twig' %}    
    
    {% endfor %}
    
                <div class="d-flex justify-center">
                  <ul class="pagination">
                    <li class="page-item {% if page == 1 %}disabled {% endif %}">
                      <a class="page-link" href="{{path('admin_ads_list',{'page':page - 1})}}">&laquo;</a>
                    </li>
                    {% for i in  1..pages %}
                    <li class="page-item {% if page == i %} active {% endif %}">
                      <a class="page-link" href="{{path('admin_ads_list',{'page': i })}}">{{i}}</a> 
                    </li>
                    {% endfor %}
                    <li class="page-item {% if page == pages %} disabled {% endif %}">
                      <a class="page-link" href="{{path('admin_ads_list',{'page':page + 1})}}">{{i}}</a> 
                    </li>
                  
                  </ul>
          </div>


    </div>

  </main>  
{% endblock %}
