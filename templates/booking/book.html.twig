{% extends 'base.html.twig' %}

 {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
 {% endblock %}
   
{% block title %}Formulaire de reservation {% endblock %}
 
{% block body %}

<div class="container">
        <h1 class="h2">Réservation pour l'annonce <br> <small>{{ad.title}}</small></h1>
        <h6>Vous allez réserver le bien de <strong><em>{{ad.author.fullname}}</em></strong>.Voir plus de biens de ce 
        <a href="{{path('user_show',{'slug':ad.author.slug})}}">loueur</a></h6>

        {{form_start(form)}}
            <div class="row">
                <div class="col">
                    {{form_row(form.startDate)}}
                </div>
                <div class="col">
                     {{form_row(form.endDate)}}
                </div>
                <div class="col">
                    <h4>Montant du Séjour : <span id="amount">.... </span> €</h4>
                    <span id="days">0 </span> nuit(s) à {{ad.price}} € 
                </div> 
            </div>

            <h3>Vous avez un commentaire ?</h3>
            {{form_row(form.comment)}}

           <button class="submit mt-4 btn btn-dark ">RÉSERVER !</button>
            <a href="{{path('ads_single',{'slug':ad.slug})}}" class="btn btn-secondary mt-4">Retour</a>
          {{form_end(form)}}
</div>

{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" 
        crossorigin="anonymous" referrerpolicy="no-referrer">
</script>
<script>
        $(document).ready(function(){

                  $('#booking_startDate,#booking_endDate').datepicker(

                      {format:'dd/mm/yyyy',
                        startDate: new Date(),
                        datesDisabled:[
                            {% for day in ad.notAvailableDays %}

                                "{{ day.format('d/m/Y') }}",
                            {% endfor %}
                        ]
                      }
                  );
                //réinitialiser de la fonction ci-dessous
                $('#booking_startDate,#booking_endDate').on('change',calculateAmount);
      

        });

        function calculateAmount(){

            //intervalle entre deux dates
            // 21/03/2019 -> 2019-03-21 par les expressions regulières

            const endDate = new Date($('#booking_endDate').val().replace(/(\d+)\/(\d+)\/(\d{4})/,'$3-$2-$1'));
            const startDate = new Date($('#booking_startDate').val().replace(/(\d+)\/(\d+)\/(\d{4})/,'$3-$2-$1'));

            //console.log(endDate);

            //On compare les 2 pour trouver le noùmbre de jours
            if(startDate && endDate && startDate < endDate){

           

            const dayTime= 24*60*60*1000;
            const interval = endDate.getTime() - startDate.getTime();
            const days = interval / dayTime;

            //on multiplie l'interval par le prix du bien
            const amount = days * {{ ad.price}};

            //insertion des nombres dans la page
            $('#days').text(days);
            $('#amount').text(amount.toLocaleString('fr-Fr'));
            

             }
        }
</script>

{% endblock %}    
