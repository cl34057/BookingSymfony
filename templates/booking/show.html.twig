{% extends 'base.html.twig' %}
{% block title %}Réservation N° {{booking.id}} {% endblock %}

{% block body %}

    <main class="container">
        <h1>Réservation Annonce N° {{booking.id}} du bien : </h1>
        <h2 class="h4">  <em><a href="{{path('ads_single',{'slug':booking.ad.slug})}}">{{booking.ad.title}}</a></em></h2>

        <!--Message à cet endroit-->
        {% if app.request.query.get('alert')%}

            <div class="alert alert-success">
                <h4 class="alert-heading">Bravo!</h4>
                <p>Votre réservation auprès de  
                    <a href="{{path('user_show',{'slug':booking.ad.author.slug})}}">{{booking.ad.author.fullName}}</a>
                      pour l'annonce <a href="{{path('ads_single',{'slug':booking.ad.slug})}}">{{booking.ad.title}}</a> est prise en compte
                </p>
            </div>


        {% endif %}
        <!--Détails-->
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h3 class="text-dark" >Détails</h3>

                    <dl class="row">
                            <dt class="col-md-4">Numéro :</dt>
                           <dd class="col-md-8">{{booking.id}}</dd>
                             <dt class="col-md-4">Date d'Arrivée :</dt>
                           <dd class="col-md-8">{{booking.startDate | date('d/m/Y')}}</dd>
                             <dt class="col-md-4">Date de départ :</dt>
                           <dd class="col-md-8">{{booking.endDate | date('d/m/Y')}}</dd>
                             <dt class="col-md-4">Nombre de Nuits : </dt>
                           <dd class="col-md-8">{{booking.duration}}</dd>
                             <dt class="col-md-4">Coût par Nuit : </dt>
                           <dd class="col-md-8">{{booking.ad.price}}</dd>
                             <dt class="col-md-4">Montant total :</dt>
                           <dd class="col-md-8">{{booking.amount}}</dd>
                             <dt class="col-md-4">Commentaire :</dt>
                           <dd class="col-md-8">{{booking.comment | default('Aucun commentaire')}}</dd>
                                       
                    
                    </dl>
                    <hr>
                    <h3 class="alert-headind"> Propriétaire du Bien</h3>
                    <div class="row">
                        <div class="col-md-3">
                            <img src="{{booking.ad.author.avatar}}" alt="Avatar de {{booking.ad.author.fullName}}" class="avatar avatar-medium">
                        </div>
                         <div class="col-md-9">

                            <h4 class="h5"><a href="{{path('user_show',{'slug':booking.ad.author.slug})}}">{{booking.ad.author.fullName}}</a></h4>
                            <span class="text-info">{{booking.ad.author.ads | length}} {% if booking.ad.author.ads | length >1 %} annonces {% else %}
                            annonce {% endif %}</span>
                          
                        </div>  
                        <div class="px-3 mt-3">
                            {{booking.ad.author.description | raw}}
                       
                        </div>
               
                    
                    </div>
                    <hr>
                      <div class="alert alert-light" id="comment">
                      
                            <h3 class="alert-heading h5">Votre avis nous interesse</h3>

                            {% if date() > date(booking.endDate) %}

                                      {% set comment = booking.ad.commentFromAuthor(app.user) %}

                                      {% if comment is not null%}

                                          <blockquote>{{comment.content}}</blockquote>
                                          <strong>Note: </strong> {% include 'inc/rating.html.twig' with {'rating':comment.rating}%}
                                     {% else %}


                                          {{form_start(form)}}
                                          {{form_widget(form)}}
                                              <button type="submit" class="btn btn-primary mt-2">Envoyer</button>
                                          {{form_end(form)}}

                                     {% endif %}
                      
                            {% else %}

                                     <p class="alert alert-warning"> Vous ne pouvez pas noté cette annonce tant que votre séjour ne sera pas terminé </p>
                            {% endif %}
                      
                      </div>



                </div>  
            </div>
            <div class="col">
                    <div class="alert alert-light">
                        <h3 class="alert-heading">Votre hebergement</h3>
                        <h4><a href="{{path('ads_single',{'slug':booking.ad.slug})}}" class="btn btn-outline-primary">{{booking.ad.title}}</a></h4>
                        <!--Contenu de l'annonce-->
                        <img src="{{booking.ad.coverImage}}" alt="Image de couverture de {{booking.ad.title}}" class="img-fluid mt-3">
                        <div class="mt-3">{{booking.ad.content | raw}}</div>

                        <a href="{{path('ads_single',{'slug':booking.ad.slug})}}" class="btn btn-outline-primary">Détails</a>
                    
                    </div> 
            
            </div>
        
                 
        </div>
        
    </main>

{% endblock %}