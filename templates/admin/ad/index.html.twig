{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Annonces{% endblock %}

{% block body %}
    <div class="container-fluid my-5">   
        <h1 class="my-5">Gestion des Annonces</h1>
        
            <table class="table table-hover">
            <thead>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">Réservation</th>
                    <th class="text-center">Note</th>
                    <th>Réservation</th>
                    </tr>
            </thead>
            <tbody>
            {% for ad in ads %}
                    <tr>
                        <td>{{ad.id}}</td>
                        <td>{{ad.title}}</td>
                        <td>
                                <img src="{{ad.author.avatar}}" alt="Avatar de {{ad.author.fullName}}" class="avatar avatar-xs">   
                                {{ad.author.fullName}}
                                
                        </td>
                        <td class="text-center"><span class="badge badge-light rounded">{{ad.bookings|length}}</span></td>
                        <td class="text-center"><span class="badge badge-success rounded">{{ad.averageratings|number_format(1,',','')}}</span></td>
                        <td>
                            <a href="{{path('admin_ads_edit',{'id':ad.id})}}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        
                        </td>
                      
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
