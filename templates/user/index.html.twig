{% extends 'base.html.twig' %}

{% block title %}Page de Profil{% endblock %}

{% block body %}

    <div class="container">
      
        <div class="row align-items-center">
            <div class="col-3 text-left">
                <img src="{{user.avatar}}" alt="avatar de {{user.fullname}}" class="avatar mb-3 mt-3">
                <br>
                <button type="button" class="btn btn-info">
                <span class="badge badge-primary">{{user.ads| length}} {% if user.ads| length >1 %} annonces {% else %} annonce {% endif %} </span>
                </button>
            </div>
            <div class="col-9">
                <h1><i>{{user.fullname}}</i></h1>

                {% if user is same as (app.user) %}

                <div class="mt-3">
                    <a href="{{path('account_profile')}}" class="btn btn-outline-secondary">Modifier mes informations</a>
                    <a href="{{path('account_password')}}" class="btn btn-outline-secondary">Modifier mon Mdp</a>
                </div>

                {% endif %}

            </div>
        </div>
            <div class="container">
                {{ user.description | raw }}

                <hr class="py-3">

                <h2>Les annonces de {{user.fullname}}</h2>
            </div>

            {% if user.ads | length > 0 %}
                    <div class="row">
                        {% for ad in user.ads %}
                    
                        <!--On affiche notre boucle-->

                        {% include 'ad/_ad.html.twig' %} 

                        {% endfor %}
                    </div>
            {% else %}

                    <div class="alert alert-warning">
                        <p>{{ user.fullname}} n'a pas encore d'annonce sur ce site</p>
                    </div>
            {% endif %}

    </div>
{% endblock %}
